<dependencies>
    <dependency>
        <groupId>{@= groupId @}</groupId>
        <artifactId>spring-batch-core</artifactId>
        <version>{@= version @}</version>
    </dependency>
</dependencies>
{@ if (repository) { @}
<repositories>
    <repository>
        <id>{@= repository.id @}</id>
        <name>{@= repository.name @}</name>
        <url>{@= repository.url @}</url>
        <snapshots>
            <enabled>{@= repository.snapshotsEnabled @}</enabled>
        </snapshots>
    </repository>
</repositories>{@ } @}
