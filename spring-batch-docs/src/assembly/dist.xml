<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>spring-batch-${project.version}</baseDirectory>
    <fileSets>
        <!-- docs -->
        <fileSet>
            <directory>target/asciidoc</directory>
            <outputDirectory>docs/reference/html</outputDirectory>
            <includes>
                <include>css/*.*</include>
                <include>images/*.*</include>
                <include>img/*.*</include>
                <include>js/**/*.*</include>
                <include>*.html</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../target/site/apidocs</directory>
            <outputDirectory>docs/api</outputDirectory>
        </fileSet>
        <!-- schemas -->
        <fileSet>
            <directory>../spring-batch-core/src/main/resources/org/springframework/batch/core/configuration/xml</directory>
            <outputDirectory>schema/batch</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../spring-batch-integration/src/main/resources/org/springframework/batch/integration/config/xml</directory>
            <outputDirectory>schema/batch/integration</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <!-- libs -->
        <fileSet>
            <directory>../spring-batch-core/target</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../spring-batch-infrastructure/target</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../spring-batch-test/target</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../spring-batch-integration/target</directory>
            <outputDirectory>libs</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>


    <files>
        <file>
            <source>target/asciidoc/index-single.pdf</source>
            <destName>spring-batch-reference.pdf</destName>
            <outputDirectory>docs/reference/pdf</outputDirectory>
        </file>
        <file>
            <source>src/dist/license.txt</source>
        </file>
        <file>
            <source>src/dist/notice.txt</source>
        </file>
        <file>
            <source>src/dist/readme.txt</source>
        </file>
    </files>
</assembly>
