<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>docs</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/asciidoc</directory>
			<outputDirectory>reference/html</outputDirectory>
			<includes>
				<include>css/*.*</include>
				<include>images/*.*</include>
				<include>img/*.*</include>
				<include>js/**/*.*</include>
				<include>*.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../target/site/apidocs</directory>
			<outputDirectory>api</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/asciidoc/index-single.pdf</source>
			<destName>spring-batch-reference.pdf</destName>
			<outputDirectory>reference/pdf</outputDirectory>
		</file>
		<file>
			<source>target/asciidoc/index-single.epub</source>
			<destName>spring-batch-reference.epub</destName>
			<outputDirectory>reference/epub</outputDirectory>
		</file>
	</files>
</assembly>
